@model Tastebook.Models.AddRecipeViewModel
@{
    ViewBag.Title = "EditRecipe";
}

<h2>EditRecipe</h2>

@using (Html.BeginForm("EditRecipe", "Recipe", FormMethod.Post, new { id = "recipeForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    @Html.HiddenFor(model => model.Recipe.RecipeId)
    @Html.HiddenFor(model => model.Recipe.Created)
    @Html.HiddenFor(model => model.Recipe.Edited)
    @Html.HiddenFor(model => model.Recipe.AuthorId)

    <div class="form-group">
        @Html.TextBoxFor(model => model.Recipe.Name, new { @class = "form-control", placeholder = "Nazwa przepisu" })
        @Html.TextAreaFor(model => model.Recipe.Text, new { @class = "form-control", placeholder = "Treść" })
        @Html.TextBoxFor(model => model.Recipe.Difficulty, new { @class = "form-control", placeholder = "Trudność" })
        @Html.TextBoxFor(model => model.Recipe.DishSize, new { @class = "form-control", placeholder = "Wielkość porcji" })
        @Html.EnumDropDownListFor(model => model.Recipe.RecipeType, "- Typ przepisu -", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-default">Zapisz</button>
}